            </div>

            @foreach (var i in Model.Items)
            {
                var lineId = i.ChiTietGioHangId;
                <div class="cart-row" data-line="@lineId" data-unit="@i.DonGia" data-stock="@i.TonKho">
                    <div><input type="checkbox" class="chk chk-item" data-line="@lineId" /></div>

