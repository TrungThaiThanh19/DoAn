﻿@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopPerfume</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DoAn.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* Header gradient & small tweaks */
        .shp-nav {
            background: linear-gradient(90deg,#ff7043,#ff5a3c 45%,#ff4d2e);
        }

            .shp-nav .nav-link, .shp-nav .navbar-brand {
                color: #fff !important;
                opacity: .96;
            }

                .shp-nav .nav-link:hover, .shp-nav .navbar-brand:hover {
                    opacity: 1;
                }

            .shp-nav .dropdown-menu {
                border-radius: 12px;
            }

        .shp-search .form-control {
            border: 0;
        }

        .shp-search .input-group {
            overflow: hidden;
            border-radius: 999px;
        }

        .footer {
            background: #fafafa;
        }
    </style>
</head>
<body>


    <!-- MAIN -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>