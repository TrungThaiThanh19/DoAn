@model DoAn.Models.TheTich
@{
    ViewData["Title"] = "Chi tiết thể tích";
}

<h2 class="mb-4 text-primary">🔍 Chi tiết thể tích</h2>

<div class="card shadow-sm rounded-4 p-4 mb-4">
    <div class="row fs-5">
        <div class="col-md-6">
            <p><strong>Mã thể tích:</strong> @Model.Ma_TheTich</p>
            <p><strong>Giá trị:</strong> @Model.GiaTri.ToString("0.##")</p>
            <p><strong>Đơn vị:</strong> @Model.DonVi</p>
            <p>
                <strong>Trạng thái:</strong>
                @if (Model.TrangThai == 1)
                {
                    <span class="badge bg-success">Hoạt động</span>
                }
                else
                {
                    <span class="badge bg-danger">Không hoạt động</span>
                }
            </p>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">← Quay lại</a>
    <a asp-action="Update" asp-route-id="@Model.ID_TheTich" class="btn btn-primary rounded-pill px-4">✏️ Cập nhật</a>
</div>