@model DoAn.Models.SanPhamChiTiet

@{
    ViewData["Title"] = "Cập nhật biến thể";
}

<h2 class="mb-4 text-primary">✏️ Cập nhật biến thể sản phẩm</h2>

<form method="post" asp-action="UpdateDetails" enctype="multipart/form-data">
    <input type="hidden" name="id" value="@Model.ID_SanPhamChiTiet" />

    <div class="card shadow rounded-4 mb-4">
        <div class="card-header bg-primary text-white">
            Thông tin biến thể
        </div>
        <div class="card-body row g-3">

            <div class="col-md-6">
                <label class="form-label">Thể tích</label>
                @Html.DropDownList("idTheTich", (SelectList)ViewBag.TheTichList, "-- Chọn --", new { @class = "form-select" })
                <span class="text-danger">@Html.ValidationMessage("ID_TheTich")</span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Số lượng</label>
                <input name="soLuong" type="text" class="form-control" value="@Model.SoLuong" />
                <span class="text-danger">@Html.ValidationMessage("SoLuong")</span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Giá nhập</label>
                <input name="giaNhap" type="text" class="form-control" value="@Model.GiaNhap" />
                <span class="text-danger">@Html.ValidationMessage("GiaNhap")</span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Giá bán</label>
                <input name="giaBan" type="text" class="form-control" value="@Model.GiaBan" />
                <span class="text-danger">@Html.ValidationMessage("GiaBan")</span>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Update" asp-route-idSanPham="@Model.ID_SanPham" class="btn btn-outline-secondary rounded-pill px-4">← Quay lại sản phẩm</a>
        <button type="submit" class="btn btn-primary rounded-pill px-4">💾 Lưu thay đổi</button>
    </div>
</form>
