@model DoAn.Models.GioiTinh
@{
    ViewData["Title"] = "Chi tiết giới tính";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 text-primary">👤 Chi tiết giới tính</h2>

<div class="card shadow-sm rounded-4 p-4 mb-4">
    <div class="row fs-5">
        <div class="col-md-6">
            <p><strong>Mã giới tính:</strong> @Model.ID_GioiTinh</p>
            <p><strong>Tên giới tính:</strong> @Model.Ten_GioiTinh</p>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">← Quay lại</a>
    <a asp-action="Update" asp-route-idGioiTinh="@Model.ID_GioiTinh" class="btn btn-primary rounded-pill px-4">✏️ Cập nhật</a>
</div>