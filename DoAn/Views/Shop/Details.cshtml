@model DoAn.Models.SanPham
@{
    ViewData["Title"] = Model.Ten_SanPham;
    var anyInStock = Model.SanPhamChiTiets.Any(ct => ct.SoLuong > 0);
    var totalQty = Model.SanPhamChiTiets.Sum(ct => ct.SoLuong);
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .detail-wrap {
        background: radial-gradient(1200px 500px at -10% -10%, rgba(108,92,231,.15), transparent 60%), radial-gradient(1200px 500px at 110% 0%, rgba(0,210,255,.15), transparent 60%), linear-gradient(180deg,#f8fafc,#ffffff);
        min-height: 100vh;
        padding: 24px 0 40px;
    }

    .thumb {
        border-radius: 16px;
        border: 1px solid rgba(99,102,241,.25);
        box-shadow: 0 12px 28px rgba(31,41,55,.12)
    }

    .badge-flag {
        display: inline-block;
        padding: 6px 10px;
        border-radius: 9999px;
        color: #fff;
        font-weight: 700;
        font-size: .85rem
    }

    .badge-oos {
        background: #6c757d
    }

    .chip {
        display: inline-block;
        padding: 6px 10px;
        border-radius: 999px;
        background: #f1f5f9;
        color: #334155;
        font-weight: 600;
        margin-right: 8px;
        margin-bottom: 8px
    }

    .price {
        font-weight: 700;
        color: #dc3545
    }

    .old-price {
        text-decoration: line-through;
        color: #6c757d
    }

    .table-variants th, .table-variants td {
        vertical-align: middle
    }

    .table-variants thead th {
        background: linear-gradient(135deg, rgba(108,92,231,.12), rgba(0,210,255,.12));
        border-bottom: 0
    }
    /* Khung mô tả */
    .desc-card {
        border-radius: 16px;
        border: 1px solid rgba(99,102,241,.25);
        background: #ffffff;
        box-shadow: 0 8px 20px rgba(31,41,55,.08)
    }

    .desc-title {
        font-weight: 800;
        letter-spacing: .2px;
        color: #1f2937
    }

    #toast-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1055
    }

    .toast-item {
        min-width: 260px;
        color: #fff;
        border-radius: 10px;
        padding: 10px 14px;
        margin-bottom: 10px;
        box-shadow: 0 8px 20px rgba(0,0,0,.25)
    }

    .toast-success {
        background: linear-gradient(135deg,#22c55e,#16a34a)
    }

    .toast-error {
        background: linear-gradient(135deg,#ef4444,#dc2626)
    }
</style>

<div class="detail-wrap">
    <div class="container">
        <div class="row g-4">
            <!-- Ảnh -->
            <div class="col-md-5">
                <div class="thumb position-relative p-3">
                    <img src="@Model.HinhAnh" class="img-fluid" alt="@Model.Ten_SanPham" />
                    @if (!anyInStock)
                    {
                        <span class="badge-flag badge-oos position-absolute" style="left:14px;top:14px">Hết hàng</span>
                    }
                </div>
            </div>

            <!-- Thông tin -->
            <div class="col-md-7">
                <h3 class="mb-2">@Model.Ten_SanPham</h3>
                <div class="text-muted mb-3">
                    @Model.ThuongHieu?.Ten_ThuongHieu • @Model.GioiTinh?.Ten_GioiTinh • @Model.QuocGia?.Ten_QuocGia
                </div>

                <div class="mb-2">
                    <span class="chip">Hương đầu: @Model.HuongDau</span>
                    <span class="chip">Hương giữa: @Model.HuongGiua</span>
                    <span class="chip">Hương cuối: @Model.HuongCuoi</span>
                    <span class="chip">Lưu hương: @Model.ThoiGianLuuHuong giờ</span>
                    <span class="chip">Tồn kho: @totalQty</span>
                </div>

                <!-- MÔ TẢ (đóng khung) -->
                <div class="desc-card p-3 mb-3">
                    <div class="desc-title mb-2">Mô tả</div>
                    <div class="text-muted">@Model.MoTa</div>
                </div>

                <!-- Bảng biến thể -->
                <div class="table-responsive">
                    <table class="table table-sm table-variants">
                        <thead>
                            <tr>
                                <th>Thể tích</th>
                                <th class="text-end">Giá gốc</th>
                                <th class="text-end">Giá sau KM</th>
                                <th class="text-center">% Giảm</th>
                                <th class="text-center">Tồn</th>
                                <th class="text-end">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ct in Model.SanPhamChiTiets.OrderBy(c => c.GiaBan))
                            {
                                var now = DateTime.Now;
                                decimal giaGoc = ct.GiaBan;
                                decimal giaHienThi = giaGoc;
                                int giamPhanTram = 0;

                                var km = ct.ChiTietKhuyenMais?
                                .Where(x => x.KhuyenMai != null
                                && x.KhuyenMai.TrangThai == 1
                                && x.KhuyenMai.NgayBatDau <= now
                                && x.KhuyenMai.NgayHetHan >= now
                                && x.GiaSauGiam > 0)
                                .OrderBy(x => x.GiaSauGiam)
                                .FirstOrDefault();

                                if (km != null && km.GiaSauGiam < giaGoc)
                                {
                                    giaHienThi = km.GiaSauGiam;
                                    giamPhanTram = (int)Math.Round((1 - (giaHienThi / giaGoc)) * 100M);
                                    giamPhanTram = Math.Clamp(giamPhanTram, 0, 100);
                                }

                                <tr>
                                    <td>@ct.TheTich?.DonVi</td>
                                    <td class="text-end">@string.Format("{0:N0} ₫", giaGoc)</td>
                                    <td class="text-end">@string.Format("{0:N0} ₫", giaHienThi)</td>
                                    <td class="text-center">@giamPhanTram%</td>
                                    <td class="text-center">@ct.SoLuong</td>
                                    <td class="text-end">
                                        @if (ct.SoLuong <= 0)
                                        {
                                            <button class="btn btn-secondary btn-sm" disabled>Hết hàng</button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-primary btn-sm"
                                                    onclick="addDetailToCart('@ct.ID_SanPhamChiTiet')">
                                                <i class="fa-solid fa-cart-plus me-1"></i>Thêm giỏ
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <a asp-action="Index" class="btn btn-outline-secondary mt-2">← Quay lại cửa hàng</a>
            </div>
        </div>
    </div>
</div>

<!-- Toast -->
<div id="toast-container"></div>
@section Scripts {
    <script>
        function showToast(message, ok=true){
          const box=document.getElementById('toast-container');
          const el=document.createElement('div');
          el.className='toast-item '+(ok?'toast-success':'toast-error');
          el.textContent=message; box.appendChild(el);
          setTimeout(()=>el.remove(),3000);
        }
        function addDetailToCart(ctId){
          fetch(`/Cart/AddDetail?id=${ctId}`, { method:'GET' })
            .then(r=>showToast(r.ok?'Đã thêm vào giỏ hàng':'Không thể thêm vào giỏ', r.ok))
            .catch(()=>showToast('Lỗi kết nối', false));
        }
    </script>
}
