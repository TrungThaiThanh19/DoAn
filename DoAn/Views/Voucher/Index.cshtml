@model IEnumerable<DoAn.Models.Voucher>

@{
    ViewData["Title"] = "Quản lý voucher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <div class="d-flex justify-content-between mb-4">
            <h4 class="mb-0">Danh sách Voucher</h4>
            <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus me-1"></i> Thêm mới</a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-secondary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Ma_Voucher)</th>
                        <th>@Html.DisplayNameFor(model => model.Ten_Voucher)</th>
                        <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
                        <th>@Html.DisplayNameFor(model => model.NgayHetHan)</th>
                        <th>@Html.DisplayNameFor(model => model.KieuGiamGia)</th>
                        <th>@Html.DisplayNameFor(model => model.GiaTriGiam)</th>
                        <th>@Html.DisplayNameFor(model => model.GiaTriToiThieu)</th>
                        <th>@Html.DisplayNameFor(model => model.GiaTriToiDa)</th>
                        <th>@Html.DisplayNameFor(model => model.SoLuong)</th>
                        <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
                        <th>@Html.DisplayNameFor(model => model.MoTa)</th>
                        <th>@Html.DisplayNameFor(model => model.TaiKhoan)</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Ma_Voucher</td>
                            <td>@item.Ten_Voucher</td>
                            <td>@item.NgayTao.ToShortDateString()</td>
                            <td>@item.NgayHetHan.ToShortDateString()</td>
                            <td>@item.KieuGiamGia</td>
                            <td>@item.GiaTriGiam</td>
                            <td>@item.GiaTriToiThieu</td>
                            <td>@item.GiaTriToiDa</td>
                            <td>@item.SoLuong</td>
                            <td>@item.TrangThai</td>
                            <td>@item.MoTa</td>
                            <td>@item.TaiKhoan?.Uername</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.ID_Voucher" class="btn btn-sm btn-warning me-1">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ID_Voucher" class="btn btn-sm btn-info text-white me-1">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.ID_Voucher" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn chuyển voucher này sang trạng thái HẾT HẠN không?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fa fa-times-circle"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>