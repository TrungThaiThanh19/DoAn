@model DoAn.Models.NhanVien

@{
    ViewData["Title"] = "Thêm Nhân Viên Mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 text-primary">Thêm Nhân Viên</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Ma_NhanVien" class="form-label fw-semibold"></label>
                <input asp-for="Ma_NhanVien" class="form-control" />
                <span asp-validation-for="Ma_NhanVien" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Ten_NhanVien" class="form-label fw-semibold"></label>
                <input asp-for="Ten_NhanVien" class="form-control" />
                <span asp-validation-for="Ten_NhanVien" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NgaySinh" class="form-label fw-semibold"></label>
                <input asp-for="NgaySinh" type="date" class="form-control" />
                <span asp-validation-for="NgaySinh" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SoDienThoai" class="form-label fw-semibold"></label>
                <input asp-for="SoDienThoai" class="form-control" />
                <span asp-validation-for="SoDienThoai" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GioiTinh" class="form-label fw-semibold"></label>
                <select asp-for="GioiTinh" class="form-control">
                    <option value="">-- Chọn giới tính --</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                    <option value="Khác">Khác</option>
                </select>
                <span asp-validation-for="GioiTinh" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DiaChiLienHe" class="form-label fw-semibold"></label>
                <textarea asp-for="DiaChiLienHe" class="form-control"></textarea>
                <span asp-validation-for="DiaChiLienHe" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TrangThai" class="form-label fw-semibold"></label>
                <select asp-for="TrangThai" class="form-control">
                    <option value="1">Hoạt động</option>
                    <option value="0">Không hoạt động</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger small"></span>
            </div>

            @* Ẩn ID_TaiKhoan vì hệ thống tạo *@
            <input type="hidden" asp-for="ID_TaiKhoan" />

            <div class="form-group mt-4">
                <input type="submit" value="Lưu nhân viên" class="btn btn-success w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">← Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}