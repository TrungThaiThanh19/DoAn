@model DoAn.Models.KhachHang

@{
    ViewData["Title"] = "Xác nhận mở khóa khách hàng";
}

<h3 class="text-success mb-4">Xác nhận MỞ KHÓA khách hàng</h3>

<div class="alert alert-info">
    <p>Bạn có chắc chắn muốn <strong>MỞ KHÓA</strong> tài khoản này không?</p>
    <ul>
        <li><strong>Họ tên:</strong> @Model.Ten_KhachHang</li>
        <li><strong>Email:</strong> @Model.Email</li>
        <li><strong>Tên đăng nhập:</strong> @Model.TaiKhoan?.Uername</li>
    </ul>
</div>

<form asp-action="MoKhoaConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.ID_KhachHang" />
    <button type="submit" class="btn btn-success">
        <i class="fas fa-unlock"></i> Mở khóa khách hàng
    </button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
