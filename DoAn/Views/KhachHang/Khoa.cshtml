@model DoAn.Models.KhachHang

@{
    ViewData["Title"] = "Xác nhận khóa tài khoản";
}

<h3 class="text-danger mb-4">Xác nhận KHÓA tài khoản khách hàng</h3>

<div class="alert alert-warning">
    <p>Bạn có chắc chắn muốn <strong>KHÓA</strong> tài khoản của khách hàng này không?</p>
    <ul>
        <li><strong>Họ tên:</strong> @Model.Ten_KhachHang</li>
        <li><strong>Email:</strong> @Model.Email</li>
        <li><strong>Tên đăng nhập:</strong> @Model.TaiKhoan?.Uername</li>
    </ul>
</div>

<form asp-action="KhoaConfirmed" asp-route-id="@Model.ID_KhachHang" method="post">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-lock"></i> Khóa tài khoản
    </button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
