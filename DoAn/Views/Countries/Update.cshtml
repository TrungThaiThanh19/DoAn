@model DoAn.Models.QuocGia
@{
	ViewData["Title"] = "Cập nhật quốc gia";
}

<h2 class="mb-4 text-primary">✏️ Cập nhật quốc gia</h2>

<form method="post">
	<input type="hidden" name="id" value="@Model.ID_QuocGia" />

	<div class="card shadow rounded-4 mb-4">
		<div class="card-header bg-primary text-white">Thông tin quốc gia</div>
		<div class="card-body row g-3">
			<div class="col-md-12">
				<label class="form-label">Tên quốc gia</label>
				<input name="tenQuocGia" class="form-control" value="@Model.Ten_QuocGia" />
				<span class="text-danger">@Html.ValidationMessage("Ten_QuocGia")</span>
			</div>
		</div>
	</div>

	<div class="d-flex justify-content-between">
		<a asp-action="Details" asp-route-id="@Model.ID_QuocGia" class="btn btn-outline-secondary rounded-pill px-4">← Quay lại</a>
		<button type="submit" class="btn btn-primary rounded-pill px-4">Cập nhật</button>
	</div>
</form>