@model DoAn.ViewModels.KhuyenMaiVM.KhuyenMaiFormVM
@{
    ViewData["Title"] = "Sửa khuyến mãi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-3">Sửa khuyến mãi</h2>

<form method="post">
    @Html.HiddenFor(m => m.ID_KhuyenMai)

    <div class="row g-3">
        <div class="col-md-3">
            <label class="form-label">Mã</label>
            <input asp-for="Ma_KhuyenMai" class="form-control" />
            <span asp-validation-for="Ma_KhuyenMai" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Tên</label>
            <input asp-for="Ten_KhuyenMai" class="form-control" />
            <span asp-validation-for="Ten_KhuyenMai" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label class="form-label">Trạng thái</label>
            <select asp-for="TrangThai" class="form-select">
                <option value="1">Bật</option>
                <option value="0">Tắt</option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Kiểu giảm</label>
            <select asp-for="KieuGiamGia" class="form-select">
                <option value="percent">Phần trăm</option>
                <option value="fixed">Số tiền</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Giá trị giảm</label>
            <input asp-for="GiaTriGiam" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="GiaTriGiam" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label class="form-label">Giá trị tối đa (cap)</label>
            <input asp-for="GiaTriToiDa" type="number" step="0.01" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Ngày bắt đầu</label>
            <input asp-for="NgayBatDau" type="datetime-local" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Ngày hết hạn</label>
            <input asp-for="NgayHetHan" type="datetime-local" class="form-control" />
            <span asp-validation-for="NgayHetHan" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label class="form-label">Mô tả</label>
            <textarea asp-for="MoTa" rows="2" class="form-control"></textarea>
        </div>

        <!-- CHỌN THƯƠNG HIỆU -->
        <div class="col-md-6">
            <label class="form-label">Áp dụng cho THƯƠNG HIỆU</label>
            <select id="brandSelect"
                    asp-for="ThuongHieuId"
                    asp-items="(SelectList)ViewBag.BrandList"
                    class="form-select">
                <option value="">-- Không chọn --</option>
            </select>
            <small class="form-text d-block mt-1">
                Chọn 1 thương hiệu để áp dụng cho toàn bộ SPCT thuộc thương hiệu đó.
            </small>
        </div>

        <!-- CHỌN SPCT -->
        <div class="col-12" id="spctWrap">
            <label class="form-label">Áp dụng cho biến thể (SPCT)</label>
            <select id="spctSelect"
                    asp-for="SanPhamChiTietIds"
                    asp-items="(Microsoft.AspNetCore.Mvc.Rendering.MultiSelectList)ViewBag.SanPhamChiTietList"
                    multiple
                    class="form-select" style="min-height:280px">
            </select>
            <small id="spctHelp" class="form-text d-block mt-1">
                Bạn có thể chọn nhiều SPCT khi KHÔNG chọn thương hiệu.
            </small>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const brand = document.getElementById('brandSelect');
            const spct  = document.getElementById('spctSelect');
            const help  = document.getElementById('spctHelp'); // nếu có
            const urlSpct = '@Url.Action("SpctByBrand", "KhuyenMai")';

            async function reloadSpctOptions(brandId) {
                const url = brandId ? `${urlSpct}?brandId=${brandId}` : urlSpct;
                const res = await fetch(url);
                const data = await res.json();

                spct.innerHTML = '';
                for (const it of data) {
                    const opt = document.createElement('option');
                    opt.value = it.id;
                    opt.textContent = it.text;
                    spct.appendChild(opt);
                }
            }

            async function sync() {
                const hasBrand = !!brand.value;
                await reloadSpctOptions(brand.value);  // nạp đúng danh sách theo thương hiệu

                // Nếu giữ logic “chọn thương hiệu ⇒ áp dụng cho toàn bộ SPCT của thương hiệu”
                // thì nên khóa SPCT (chỉ hiển thị cho biết):
                spct.disabled = hasBrand;
                if (hasBrand) for (const o of spct.options) o.selected = false;

                if (help) {
                    help.textContent = hasBrand
                      ? "Đã chọn thương hiệu ⇒ KM áp dụng cho toàn bộ SPCT của thương hiệu; ô dưới chỉ hiển thị danh sách."
                      : "Bạn có thể chọn nhiều SPCT khi KHÔNG chọn thương hiệu.";
                }
            }

            brand.addEventListener('change', sync);
            sync(); // chạy lần đầu
        })();
    </script>
}
