@model DoAn.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng Nhập";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    :root {
        --brand: #ee4d2d;
        --ink: #222;
    }

    .auth-wrap {
        min-height: calc(100vh - 64px);
    }

    /* BÊN TRÁI: ẢNH NỀN + OVERLAY */
    .brand-side {
        position: relative;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 48px 24px;
        min-height: 520px; /* để ảnh nhìn cân */
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        border-radius: 8px; /* nếu muốn bo góc khối cam như ảnh mẫu */
    }

        .brand-side::after { /* lớp mờ để chữ dễ đọc */
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(0deg, rgba(0,0,0,.35), rgba(0,0,0,.35));
            border-radius: 8px;
        }

    .brand-box {
        max-width: 520px;
        position: relative;
        z-index: 1;
        text-align: center;
    }

    .brand-logo {
        width: 64px;
        height: 64px;
        border-radius: 14px;
        background: #fff;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        color: var(--brand);
        margin-bottom: 16px;
    }

    .brand-title {
        font-weight: 700;
        font-size: 28px;
        line-height: 1.2;
    }

    .brand-sub {
        opacity: .9;
        margin-top: 8px;
    }

    /* FORM BÊN PHẢI */
    .form-side {
        display: flex;
        align-items: center;
        padding: 48px 16px;
    }

    .login-card {
        width: 100%;
        max-width: 420px;
        margin: 0 auto;
        border: 0;
        border-radius: 12px;
        box-shadow: 0 12px 30px rgba(0,0,0,.08);
    }

    .card-header {
        background: #fff;
        border-bottom: 0;
        padding-bottom: 0;
    }

    .qr-pill {
        font-size: .875rem;
        border: 1px dashed #ddd;
        padding: 6px 10px;
        border-radius: 999px;
    }

    .btn-brand {
        background: var(--brand);
        border-color: var(--brand);
    }

        .btn-brand:hover {
            filter: brightness(.95);
        }

    .divider {
        display: flex;
        align-items: center;
        gap: 12px;
        margin: 12px 0 4px;
    }

        .divider::before, .divider::after {
            content: "";
            height: 1px;
            background: #e9ecef;
            flex: 1;
        }

    .form-control {
        height: 44px;
    }

    .muted {
        color: #6b7280;
        font-size: .93rem;
    }

    a.link {
        color: var(--brand);
        text-decoration: none;
    }

        a.link:hover {
            text-decoration: underline;
        }
</style>

<div class="container-fluid auth-wrap">
    <div class="row g-4 px-lg-5">
        <!-- BÊN TRÁI: ẢNH NỀN -->
        <div class="col-lg-7 d-none d-lg-block">
            <div class="brand-side"
                 style="background-image:url('@Url.Content("~/img/logo-nuoc-hoa.jpg")')">
                <div class="brand-box">
                    <div class="brand-logo">S</div>
                    <div class="brand-title">Nền tảng mua sắm nước hoa yêu thích</div>
                    <div class="brand-sub">Khám phá hàng trăm mùi hương chính hãng, giao nhanh, đổi trả dễ dàng.</div>
                </div>
            </div>
        </div>

        <!-- BÊN PHẢI: FORM -->
        <div class="col-12 col-lg-5 form-side">
            <div class="card login-card">
                <div class="card-header px-4 pt-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <h4 class="mb-1">Đăng nhập</h4>
                        <span class="qr-pill">Đăng nhập với mã QR</span>
                    </div>
                </div>
                <div class="card-body px-4 pb-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }

                    <form asp-action="Login" asp-controller="TaiKhoan" method="post" class="mt-2">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                        <div class="mb-3">
                            <input asp-for="Username" class="form-control" placeholder="Email/Số điện thoại/Tên đăng nhập" />
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <div class="mb-2">
                            <div class="input-group">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end mb-3">
                            <a class="link" asp-action="ForgotPassword" asp-controller="TaiKhoan">Quên mật khẩu</a>
                        </div>

                        <button type="submit" class="btn btn-brand w-100 mb-3">Đăng nhập</button>

                        <div class="text-center mt-3 muted">
                            Bạn mới biết đến cửa hàng?
                            <a class="link" asp-action="Register" asp-controller="TaiKhoan">Đăng ký</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }
